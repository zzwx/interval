package interval

import "fmt"

func ExampleWrap{{.CT}}() {
	fmt.Printf("%v\n", Wrap{{.CT}}(0, 100, 120)) //=> 20
	fmt.Printf("%v\n", Wrap{{.CT}}(100, 0, 120)) //=> 20 (swapped range is fine)
	fmt.Printf("%v\n", Wrap{{.CT}}(0, 100, 0))   //=> 0
	fmt.Printf("%v\n", Wrap{{.CT}}(0, 100, 100)) //=> 0
	fmt.Printf("%v\n", Wrap{{.CT}}(0, 100, 101)) //=> 1
	fmt.Printf("%v\n", Wrap{{.CT}}(50, 100, 120)) //=> 70
	fmt.Printf("%v\n", Wrap{{.CT}}(50, 100, 10)) //=> 60
{{- if not .Unsigned }}
	fmt.Printf("%v\n", Wrap{{.CT}}(0, 100, -10)) //=> 90
{{- end }}
{{- if .Float }}
	fmt.Printf("%v\n", Wrap{{.CT}}(0, 360, 361.5)) //=> 1.5
	fmt.Printf("%v\n", Wrap{{.CT}}(0, 360, -100)) //=> 260
	fmt.Printf("%v\n", Wrap{{.CT}}(0, 360, -720)) //=> 0
	fmt.Printf("%v\n", Wrap{{.CT}}(0, 360, 720.5)) //=> 0.5
{{- end }}
	// Output:
	// 20
	// 20
	// 0
	// 0
	// 1
	// 70
	// 60
{{- if not .Unsigned }}
	// 90
{{- end }}
{{- if .Float }}
	// 1.5
	// 260
	// 0
	// 0.5
{{- end }}
}

func ExampleClamp{{.CT}}() {
	fmt.Printf("%v\n", Clamp{{.CT}}(0, 100, 120)) //=> 100
{{- if not .Unsigned }}
	fmt.Printf("%v\n", Clamp{{.CT}}(0, 100, -20)) //=> 0
	fmt.Printf("%v\n", Clamp{{.CT}}(100, 0, -20)) //=> 0 (even though min & max are swapped)
{{- end }}
	// Output:
	// 100
{{- if not .Unsigned }}
	// 0
	// 0
{{- end }}
}

func ExampleTest{{.CT}}() {
	fmt.Printf("%v\n", Test{{.CT}}(0, 100, 0, false, false))  //=> true
	fmt.Printf("%v\n", Test{{.CT}}(0, 100, 0, true, false))   //=> false
	fmt.Printf("%v\n", Test{{.CT}}(0, 100, 100, true, false)) //=> true
	fmt.Printf("%v\n", Test{{.CT}}(100, 0, 100, false, true)) //=> true
	// Output: true
	// false
	// true
	// true
}

func ExampleValidate{{.CT}}() {
	fmt.Println(Validate{{.CT}}(0, 100, 0, false, false))   //=> 0 <nil>
	fmt.Println(Validate{{.CT}}(0, 100, 0, true, false))    //=> 0 0 is outside of range [0, 100)
	fmt.Println(Validate{{.CT}}(0, 100, 100, true, false))  //=> 100 <nil>
	fmt.Println(Validate{{.CT}}(0, 100, 101, false, false)) //=> 0 101 is outside of range [0,100]
	fmt.Println(Validate{{.CT}}(0, 100, 100, true, true))   //=> 0 100 is outside of range (0,100)
	// Output:
	// 0 <nil>
	// 0 0 is outside of range (0,100]
	// 100 <nil>
	// 0 101 is outside of range [0,100]
	// 0 100 is outside of range (0,100)
}

func ExampleToString{{.CT}}() {
	fmt.Printf("%v\n", ToString{{.CT}}(0, 100, true, true))   //=> (0,100)
	fmt.Printf("%v\n", ToString{{.CT}}(0, 100, false, false)) //=> [0,100]
	fmt.Printf("%v\n", ToString{{.CT}}(0, 100, true, false))  //=> (0,100]
	fmt.Printf("%v\n", ToString{{.CT}}(0, 100, false, true))  //=> [0,100)
	// Output:
	// (0,100)
	// [0,100]
	// (0,100]
	// [0,100)
}

func ExampleRange{{.CT}}() {
	r := NewRange{{.CT}}(0, 100, false, false)
	fmt.Println(r.Wrap(120))     //=> 20
	fmt.Println(r.Validate(120)) //=> (0, error(120 is outside of range [0,100]))
	fmt.Println(r.Test(120))     //=> false
	fmt.Println(r.ToString())    //=> [0,100]
	r = NewRange{{.CT}}(100, 0, false, true) // swapped
  fmt.Println(r.Wrap(120))     //=> 20
  fmt.Println(r.Validate(120)) //=> (0, error(120 is outside of range (0,100]))
  fmt.Println(r.Test(120))     //=> false
  fmt.Println(r.ToString())    //=> (0,100]
	// Output:
	// 20
	// 0 120 is outside of range [0,100]
	// false
	// [0,100]
	// 20
	// 0 120 is outside of range (0,100]
	// false
	// (0,100]
}

func ExampleMinMax{{.CT}}() {
	x, y := MinMax{{.CT}}(0, 100)
	fmt.Printf("%v %v\n", x, y)   //=> 0 100
	x, y = MinMax{{.CT}}(100, 0) // swapped
  fmt.Printf("%v %v\n", x, y)   //=> 0 100
	// Output:
	// 0 100
	// 0 100
}

func ExampleMinMaxExclusive{{.CT}}() {
	x, y, xe, ye := MinMaxExclusive{{.CT}}(0, 100, true, false)
	fmt.Printf("%v %v %v %v\n", x, y, xe, ye)   //=> 0 100 true false
	x, y, xe, ye = MinMaxExclusive{{.CT}}(100, 0, false, true) // swapped
  fmt.Printf("%v %v %v %v\n", x, y, xe, ye)   //=> 0 100 true false
	// Output:
	// 0 100 true false
	// 0 100 true false
}
